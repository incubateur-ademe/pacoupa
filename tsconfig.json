{
  "extends": "@tsconfig/next",
  "compilerOptions": {
    "strict": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/config": [
        "src/config.ts"
      ],
      "@/dsfr": [
        "src/dsfr/server.ts"
      ],
      "@/dsfr/client": [
        "src/dsfr/client.ts"
      ],
      "@/dsfr/utils/*": [
        "src/dsfr/utils/*"
      ],
      "@/utils/*": [
        "src/lib/utils/*"
      ],
      "@__content/*": [
        "content/*"
      ],
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "global.d.ts",
    "env.d.ts",
    "next-env.d.ts",
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}